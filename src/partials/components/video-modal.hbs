<section class="video-modal">
  <div class="video-modal__inner">
    <div class="container video-modal__container">
      <div class="video-modal__wrapper">
        <div class="video-modal__close-area js-video-modal-button"></div>
        <button class="video-modal__button js-video-modal-button">
        </button>
        <div class="video-modal__layout">
          <div class="video-modal__iframe-wrapper-scroll-fixer">
            <div id="player" class="video-modal__iframe"></div>
            {{!-- <iframe id="player" class="video-modal__iframe" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> --}}
            <div class="video-modal__cover">
              <img class="video-modal__cover-img" src="" alt="video cover">
              <div class="video-modal__play-button">
                {{> play-button }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>